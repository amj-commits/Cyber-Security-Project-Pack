import socket

def scan(target):
    print(f"Scanning {target}...")
    for port in range(1, 1025):
        s = socket.socket()
        s.settimeout(0.5)
        try:
            s.connect((target, port))
            print(f"Port {port} OPEN")
        except:
            pass

if __name__=='__main__':
    ip = input("Enter IP: ")
    scan(ip)

# Network Scanner Tool

## Overview
A simple Python port scanner for cybersecurity practice.

